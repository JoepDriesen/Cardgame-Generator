<cardType>
	
	<!-- The name of this card type (Required). -->
	<name>?</name>
	
	<!-- The box in which the card graphic should be contained -->
	<graphic x="?" y="?" w="?" h="?" />
	
	<!-- The rules for playing a card of this type (Required). -->
	<rules>
		?
	</rules>
	
	<!-- Content to be displayed on this type of card (Required, may be empty)-->
	<content>
		<!-- 
			 A card of this type will have content printed on it according to the
		     below tags. Usually you will want at least a 'name' and 'rules' tag
		     here.
		     For every tag, the following attributes are required:
		      - fontSize: The size of the font to display this content
		      - x: The x position of the top-left of the content
		      - y: The y position of the top-left of the content
		      - w: The maximum width of the content
		     And the following attributes are optional:
		      - h: The height of the content. If given, the content will be 
		           vertically centered in the content box (x, y, w, h)
		 -->
		<name fontSize="?" x="?" y="?" w="?" h="?"/>
		<rules fontSize="?" x="?" y="?" w="?" />
	</content>
</cardType>